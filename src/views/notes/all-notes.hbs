<div class="row">
    {{#each notes}}
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{titulo}} <a href="/notes/edit/{{_id}}"><i class="bi bi-pencil-square"></i></a>
                    </h4>
                    <p>
                        {{description}}
                    <form action="/notes/delete/{{_id}}?_method=DELETE" method="post">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-danger btn-block">Borrar</button>
                    </form>
                    </p>
                </div>
            </div>
        </div>
        {{else}}
        <div class="card-body">
            <p> No hay notas a√∫n </p>
            <a href="/notes/nueva" class="btn btn-succes btn-block">Crea una</a>
        </div>
    {{/each}}
</div>